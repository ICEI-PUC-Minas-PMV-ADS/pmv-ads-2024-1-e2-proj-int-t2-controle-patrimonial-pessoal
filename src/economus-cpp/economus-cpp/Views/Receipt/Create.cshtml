@model economus_cpp.ViewModels.ReceiptViewModel

@{
    ViewData["Title"] = "Adicionar Receita";
}

<h1>Receita</h1>

<h4>Adicionar Receita:</h4>
<hr />

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Type" class="control-label"></label>
        <select asp-for="Type" class="form-control" asp-items="ViewBag.ReceiptTypes"></select>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiptAmount" class="control-label"></label>
        <input asp-for="ReceiptAmount" class="form-control" />
        <span asp-validation-for="ReceiptAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ReceiptDate" class="control-label"></label>
        <input asp-for="ReceiptDate" class="form-control" type="date" />
        <span asp-validation-for="ReceiptDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>